@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model webProje.Models.Movie

@{
    ViewData["Title"] = "UpdateMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:orange">@localizer["updtmv"]</h1>



<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateMovie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>@localizer["name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@localizer["shrtdes"]</label>
                <input asp-for="shortDescription" class="form-control" />
                <span asp-validation-for="shortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@localizer["des"]</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@localizer["img"]</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@localizer["catId"]</label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color:orange" type="submit" value="@localizer["save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:orange" asp-action="adminPanel">@localizer["bcktolist"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
