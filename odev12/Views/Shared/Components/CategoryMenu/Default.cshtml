@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model IEnumerable<Category>
<div class="list-group">

    <a href="/" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==null?"active":"")">
        @localizer["categ"]
    </a>

    @foreach (var cat in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-id="@cat.Id"
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==cat.Id.ToString()?"active":"")">
            @cat.Name
        </a>
    }
</div>

