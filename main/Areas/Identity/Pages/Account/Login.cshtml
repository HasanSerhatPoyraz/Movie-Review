@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model LoginModel


<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-4 ">

    </div>
    <div class="col-sm-4  text-white p-3" style="background-color: black; margin-top: 80px; border-radius: 10px; opacity: 0.9;">
        <section>

            <form id="account" method="post">
                <h4>@localizer["log"]</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>@localizer["pas"]</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
               
                
                <div class="form-group">
                    <button style="background-color:orange" type="submit" class="btn btn-primary">@localizer["log"]</button>
                </div>

            </form>
        </section>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
